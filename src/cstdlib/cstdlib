// -*- mode: c++ -*-
// vim: set ft=cpp:
#pragma once

// I don't understand yet why this forward declaration is necessary, but it is.
void _exit(i32);  // NOLINT

void exit(i32 exit_code) {
    _exit(exit_code);
}

auto alloca(usize size) -> void* {
    return __builtin_alloca(std::decay_integral(size));
}

constexpr int EXIT_SUCCESS = 0;
constexpr int EXIT_FAILURE = 1;
constexpr auto NULL = nullptr;
