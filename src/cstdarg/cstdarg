// -*- mode: c++ -*-
// vim: set ft=cpp:
#pragma once

#include <any>
using va_list = __builtin_va_list;

void va_start(va_list arguments, auto count) {
    __builtin_va_start(arguments, count);
}
void va_end(va_list arguments) {
    __builtin_va_end(arguments);
}
void va_copy(va_list arguments, auto destination) {
    __builtin_va_copy(arguments, destination);
}
#define va_arg(v, l) __builtin_va_arg(v, l)
